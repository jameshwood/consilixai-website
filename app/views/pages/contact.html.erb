<!-- Hero Section -->
<main class="custom-bg">
  <section class="mx-auto px-8 md:px-9 py-16 lg:py-24" style="max-width: 1500px;">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-5xl lg:text-6xl font-bold custom-text leading-tight mb-6">
        Contact
      </h1>
      <hr style="width: 64px; height: 4px; background-color: #EB7300; border: none; margin: 0 auto 32px auto;" />
      <p class="text-xl custom-text opacity-80 leading-relaxed">
        Let's build the right AI solution for your business
      </p>
    </div>
  </section>
</main>

<!-- Contact Section -->
<section class="custom-bg py-20">
  <div class="mx-auto px-8 md:px-9" style="max-width: 1500px;">
    <div class="grid lg:grid-cols-2 gap-12" style="margin-bottom: 180px;">

      <!-- Contact Form -->
      <div class="bg-gray-900 bg-opacity-20 rounded-xl p-8 border border-gray-700">
        <h2 class="text-2xl font-bold custom-text mb-6">Get Started Today</h2>
        <form class="space-y-8" action="#" method="POST">
          <div>
            <input type="text" name="name" placeholder="Your Name" class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg custom-text placeholder-gray-400 focus:border-orange-500 focus:outline-none" required>
          </div>
          <div>
            <input type="email" name="email" placeholder="Email Address" class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg custom-text placeholder-gray-400 focus:border-orange-500 focus:outline-none" required>
          </div>
          <div>
            <input type="text" name="company" placeholder="Company" class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg custom-text placeholder-gray-400 focus:border-orange-500 focus:outline-none">
          </div>
          <div>
            <textarea name="message" placeholder="Tell us about your project" class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg custom-text placeholder-gray-400 focus:border-orange-500 focus:outline-none" rows="4" required></textarea>
          </div>
          <button type="submit" class="w-full custom-accent text-white px-8 py-3 rounded-lg text-lg font-semibold hover:opacity-90 transition-opacity">
            Send Message
          </button>
        </form>
      </div>

      <!-- Right Column -->
      <div class="space-y-8">

        <!-- Book a Consultation -->
        <div class="bg-gray-900 bg-opacity-20 rounded-xl p-8 border border-gray-700">
          <h3 class="text-xl font-bold custom-text mb-4">Book a Consultation</h3>
          <p class="custom-text opacity-80 mb-6 leading-relaxed">
            Schedule a free 30-minute strategy call to discuss your AI transformation goals.
          </p>

          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 custom-accent rounded-full flex items-center justify-center">
              <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
                <path d="M19 3H18V1H16V3H8V1H6V3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM19 19H5V8H19V19ZM7 10H12V15H7V10Z"/>
              </svg>
            </div>
            <div>
              <div class="custom-text font-medium">Calendar Integration</div>
              <div class="custom-text opacity-70 text-sm">Click to book on booking calendar</div>
            </div>
          </div>

          <%= link_to "Open Calendar", "#", class: "custom-accent text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity inline-block" %>
        </div>

        <!-- Get in Touch -->
        <div class="bg-gray-900 bg-opacity-20 rounded-xl p-8 border border-gray-700">
          <h3 class="text-xl font-bold custom-text mb-6">Get in Touch</h3>

          <div class="space-y-4">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center">
                <svg width="16" height="16" fill="currentColor" class="custom-accent-text" viewBox="0 0 24 24">
                  <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z"/>
                </svg>
              </div>
              <div>
                <div class="custom-text text-sm opacity-70">Email</div>
                <div class="custom-text font-medium">hello@consilix.ai</div>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center">
                <svg width="16" height="16" fill="currentColor" class="custom-accent-text" viewBox="0 0 24 24">
                  <path d="M6.62 10.79C8.06 13.62 10.38 15.94 13.21 17.38L15.41 15.18C15.69 14.9 16.08 14.82 16.43 14.93C17.55 15.3 18.75 15.5 20 15.5C20.55 15.5 21 15.95 21 16.5V20C21 20.55 20.55 21 20 21C10.61 21 3 13.39 3 4C3 3.45 3.45 3 4 3H7.5C8.05 3 8.5 3.45 8.5 4C8.5 5.25 8.7 6.45 9.07 7.57C9.18 7.92 9.1 8.31 8.82 8.59L6.62 10.79Z"/>
                </svg>
              </div>
              <div>
                <div class="custom-text text-sm opacity-70">Phone</div>
                <div class="custom-text font-medium">+1 (555) 123-4567</div>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center">
                <svg width="16" height="16" fill="currentColor" class="custom-accent-text" viewBox="0 0 24 24">
                  <path d="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2ZM17 13H11V7H12.5V11.5H17V13Z"/>
                </svg>
              </div>
              <div>
                <div class="custom-text text-sm opacity-70">Response Time</div>
                <div class="custom-text font-medium">Within 24 hours</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

