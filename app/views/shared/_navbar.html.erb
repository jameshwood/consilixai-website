<div class="navbar">
  <div class="navbar-container">
    <!-- Logo -->
    <%= link_to "Consilix.ai", root_path, class: "navbar-logo" %>
    
    <!-- Navigation -->
    <div class="navbar-nav">
      <%= link_to "Home", root_path, class: "navbar-link #{current_page?(root_path) ? 'active' : ''}" %>
      <%= link_to "Services", services_path, class: "navbar-link #{current_page?(services_path) ? 'active' : ''}" %>
      <%= link_to "About", about_path, class: "navbar-link #{current_page?(about_path) ? 'active' : ''}" %>
      <%= link_to "Case Studies", case_studies_path, class: "navbar-link #{current_page?(case_studies_path) ? 'active' : ''}" %>
      <%= link_to "Contact", contact_path, class: "navbar-link #{current_page?(contact_path) ? 'active' : ''}" %>
    </div>
    
    <!-- CTA Button -->
    <%= link_to "Book a Call", "#contact", class: "navbar-cta" %>
    
    <!-- Mobile menu button -->
    <button class="navbar-mobile-btn">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</div>